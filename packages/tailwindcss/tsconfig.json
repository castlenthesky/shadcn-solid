{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"paths": {
			"@/libs/*": ["./libs/*"],
			"@/components/ui/*": ["./ui/*"],
			"@/hooks/*": ["./hooks/*"],
			"@/blocks/*": ["./blocks/*"]
		}
	}
}
